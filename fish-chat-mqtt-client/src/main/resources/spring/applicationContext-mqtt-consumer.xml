<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
					 http://www.springframework.org/schema/beans/spring-beans.xsd 
					 http://code.alibabatech.com/schema/dubbo
					 http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:registry id="mqttRegistry" protocol="zookeeper"
                    address="${zk_registry}" group="dubbo/blue/mqtt-broker"/>

    <dubbo:reference id="mqttClientService"
                     interface="org.fish.chat.mqtt.service.MqttService" version="1.0.0"
                     check="false" registry="mqttRegistry" loadbalance="cid" async="true"/>

</beans>